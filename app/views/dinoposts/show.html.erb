<h1>
  <%= @dinopost.title %>
</h1>

<div>
  <%= @dinopost.body %>
</div>

<ul>
  <li><%= link_to "Edit", edit_dinopost_path(@dinopost) %></li>
  <li>
    <%= link_to "Destroy", dinopost_path(@dinopost),
      data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      } 
    %>
  </li>
</ul>

<h2>Comments</h2>
<% @dinopost.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_with model: [ @dinopost, @dinopost.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
